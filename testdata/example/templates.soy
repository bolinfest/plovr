{namespace example.templates}

/**
 * @param meaningOfLife
 * @param weekdays
 */
{template .base}
<div>{msg desc="meaning"}The meaning of life is: {$meaningOfLife}.{/msg}</div>

<ul>
{for $weekday in $weekdays}
  <li>{strSub($weekday, 0, 3)}
{/for}
</ul>

{call .listTemplate}
  {param items: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'] /}
{/call}
{/template}

