{namespace strict_test autoescape="strict"}

/** hello html */
{template .helloHtml kind="html"}
  {call .hello /}
{/template}

/** hello js */
{template .helloJs kind="js"}
  '{call .hello /}'
{/template}

/** hello */
{template .hello}
Hello world
{/template}

/** a template with a param */
{template .withParam}
  {@param p : string}

  Hello, {$p}
{/template}

/** a template with a param */
{template .callsItself}
  {@param depth : int}
  {@param p : string}
  {if $depth == 0}
    {$p}
  {else}
    {call .callsItself data="all"}
      {param depth : $depth - 1/}
    {/call}
  {/if}
{/template}
